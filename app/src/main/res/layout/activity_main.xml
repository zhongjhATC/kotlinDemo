<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Kotlin 基础语法" />

        <Button
            android:id="@+id/btnFun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="函数"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnCharacter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字符串"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NULL检查机制"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnIs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="is(类似instanceof)"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区间.."
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Kotlin 基本数据类型" />

        <Button
            android:id="@+id/btnCompare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="比较两个数字"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnAnOperator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位操作符"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnChar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字符"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnCharacterString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字符串"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnCharacterStringTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="字符串模板"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Kotlin 条件控制" />

        <Button
            android:id="@+id/btnIF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="if表达式"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在区间内"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnWhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="when"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="循环" />

        <Button
            android:id="@+id/btnFor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="for"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnWhile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="while"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnReturn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="return \ break \ continue"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Kotlin 类和对象" />

        <Button
            android:id="@+id/btnClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类演示"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnNest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嵌套类"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnInner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内部类"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnAnonymousInner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="匿名内部类"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Kotlin 继承" />

        <Button
            android:id="@+id/btnSubClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="构造函数"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnOverWriteClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重写类"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnOverWriteProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重写属性"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="Kotlin 接口" />

        <Button
            android:id="@+id/btnKotilinInterface"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接口"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnFunOverwrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重写函数"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExpandFun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩展函数"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExpandNull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩展空对象"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExpandAssociatedObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="伴生对象的扩展"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExpandProperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩展属性"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExpandMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩展声明为成员"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExpandMember2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以成员的形式定义的扩展函数"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:text="数据类" />

        <Button
            android:id="@+id/btnCopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出" />

    </LinearLayout>

</ScrollView>
